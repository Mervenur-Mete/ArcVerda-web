@{
    ViewBag.Title = "Contact";
}
<main aria-labelledby="page-title">
    <div class="hero-section" style="background-image: url('../../Content/SiteLayout')">
        <div class="content-wrapper">
          

            <div class="centered-box">
                <h1 id="page-title" class="hero-title animated-title" data-aos="fade-up">
                    <span>Contact us</span>


                </h1>
                <nav aria-label="breadcrumb" data-aos="fade-up" data-aos-delay="200">
                    <ol class="breadcrumb-list">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Contact</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <section class="contact-section">
        <div class="contact-container">
            <div class="contact-info">
                <h1 id="page-title" class="hero-title animated-title" data-aos="fade-up">
                    <div class="title-line">
                        <span>Get</span>
                        <span>in</span>
                        <span>Touch</span>
                    </div>
                    <div class="title-line">
                        
                        <span>With</span>
                        <span>Us</span>
                    </div>
                </h1>
                <div class="contact-grid" role="list">
                    
                </div>
            </div>

            <!-- Sağ kısım: İletişim Formu -->
            <div class="contact-form-box">
                <h3>Contact Us</h3>
                <form>
                    <div class="input-row">
                        <input type="text" name="firstName" placeholder="Ad*" required aria-label="Ad" />
                        <input type="text" name="lastName" placeholder="Soyad*" required aria-label="Soyad" />
                    </div>
                    <input type="email" name="email" placeholder="E-posta Adresi*" required aria-label="E-posta Adresi" />
                    <textarea name="message" placeholder="Mesajınızı yazın*" required aria-label="Mesajınızı yazın"></textarea>
                    <button type="submit">GÖNDER</button>
                </form>
            </div>

        </div>
            
    </section>
</main>

